{
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "globals": {
    "Ext": true,
    "window": true,
    "document": true
  },
  "parserOptions": {
    "ecmaVersion": 2016
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-eval": "off",
    "no-restricted-globals": "off",
    "no-console": "off",
    "import/newline-after-import": "off",
    "import/no-unresolved": "off",
    "func-names": [
      "error",
      "never"
    ],
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "prefer-destructuring": [
      "error",
      {
        "array": false,
        "object": true
      },
      {
        "enforceForRenamedProperties": false
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  }
}
